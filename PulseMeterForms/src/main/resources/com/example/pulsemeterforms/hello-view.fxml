<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="739.0" prefWidth="701.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pulsemeterforms.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox layoutX="30.0" layoutY="30.0" prefHeight="43.0" prefWidth="661.0">
      <children>
         <Label fx:id="welcomeText" prefHeight="36.0" prefWidth="630.0" text="Path:" />
         <Button onAction="#onHelloButtonClick" prefHeight="33.0" prefWidth="189.0" text="Open video" />
      </children>
   </HBox>
   <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
         <GridPane prefHeight="160.0" prefWidth="661.0">
           <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="326.0" minWidth="10.0" prefWidth="113.0" />
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="570.0" minWidth="10.0" prefWidth="548.0" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
            <children>
               <Label text="FPS:" />
               <Label text="Min brightness:" GridPane.rowIndex="1" />
               <Label text="Max brightness:" GridPane.rowIndex="2" />
               <Label text="Frequency:" GridPane.rowIndex="4" />
               <Label text="Pulsation:" GridPane.rowIndex="5" />
               <Label fx:id="fpsText" text="0" GridPane.columnIndex="1" />
               <Label fx:id="minBrightnessText" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <Label fx:id="maxBrightnessText" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               <Label fx:id="frequencyText" text="0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               <Label fx:id="pulsationText" text="0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               <Label text="Average brightness:" GridPane.rowIndex="3" />
               <Label fx:id="avgBrightnessText" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
         </GridPane>
      </children>
   </VBox>
   <VBox prefHeight="532.0" prefWidth="661.0">
      <children>
         <HBox prefHeight="763.0" prefWidth="661.0">
            <children>
               <LineChart fx:id="chart" prefHeight="495.0" prefWidth="657.0">
                 <xAxis>
                   <CategoryAxis side="BOTTOM" />
                 </xAxis>
                 <yAxis>
                   <NumberAxis side="LEFT" />
                 </yAxis>
               </LineChart>
            </children>
         </HBox>
      </children>
   </VBox>
</VBox>
